<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Spencers Portfolio", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Sorry about that, try again", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Notice", sticky: false) %>
<% end %>