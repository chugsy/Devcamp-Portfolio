<div class="app-card-container">
    <div class="card">
        <h1>About Me Page</h1>

        <hr>
        
        <div class="row">
            <div class="col-md-4">
                
                <%= image_tag "profile.jpg", width: 300, alt: "profile image", class: 'profile-img' %>
            </div>
            
            <div class="col-md-8">
                <p>I am a Senior at Layton High School.</p>
            <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Job History
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler="education"
          >
            Education
          </button>
        </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              CrestWood Growers
            </div>
            <div class="card card-block">
              The Pizza Place
            </div>
          </div>

          <div class="collapse" id="education">
            <div class="card card-block">
              Layton High School
            </div>
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>